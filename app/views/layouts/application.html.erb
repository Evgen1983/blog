<!DOCTYPE html>
<html>
  <head>
    <title>Мой блог</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway:400,700' %>
  </head>
  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "rails.png" %>
        <% end %>
      </div>
 
      <ul>
        <li class="category">Сайт</li>
        <li><%= link_to "Блог", root_path %></li>
        <li><%= link_to "Об Авторе", about_path %></li>
        <li><%= link_to "Портфолио", portfolio_path %></li>
      </ul>
 
      <ul>
       <li class="category">Ссылки</li> 
       <li><a href="#">Github</a></li>
       <li><a href="#">Email</a></li>
      </ul>
 
      <p class="sign_in"><%= link_to "Админ", signup_path %></p>
    </div>
     <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
        <p>Все Записи</p>
      <% elsif current_page?(about_path) %>
        <p>Обо мне</p>
      <% elsif current_page?(portfolio_path) %>
        <p>Портфолио</p>
      <% else %>
        <%= link_to "Обратно к записям", root_path %>
      <% end %>

 
      <div class="buttons">
        <%= link_to new_post_path do %> 
        <button class="button">Новая Запись</button> 
        <% end %>
        <button class="button">Выход</button>
      </div>
    </div>
 
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
 
    <%= yield %>
 
  </body>
</html>