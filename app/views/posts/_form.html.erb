<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2>Форма содержит <%=@post.errors.count%> <%=Russian::pluralize(@post.errors.count, "ошибку", "ошибки", "ошибок")%>:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <br>
  <%= f.submit %>
<% end %>